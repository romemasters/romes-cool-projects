---
import fs from 'fs';
import path from 'path';

const user = "romemasters";
const logoUrl = "https://raw.githubusercontent.com/romemasters/romes-cool-projects/refs/heads/main/public/468-4684000_png-file-svg-easy-storage-icon-transparent-png.png";
const gamesDir = path.resolve('public', 'games');
const gamesFiles = fs.existsSync(gamesDir) ? fs.readdirSync(gamesDir) : [];
const gamesList = gamesFiles.filter(f => f.endsWith('.html'));
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Games · Code Unit</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --cf-orange: #f38020;
      --cf-bg: #f7f8fa;
      --cf-sidebar: #23263b;
      --cf-card: #fff;
      --cf-border: #e8e8ed;
      --cf-shadow: 0 4px 20px #22243a15;
    }
    body {
      font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
      background: var(--cf-bg);
      color: #22243a;
      margin: 0;
      min-height: 100vh;
      overflow-x: hidden;
    }
    .cf-sidebar {
      position: fixed;
      width: 250px;
      top: 0;
      left: 0;
      bottom: 0;
      background: var(--cf-sidebar);
      color: #fff;
      padding: 1.8rem 0 0 0;
      z-index: 22;
      border-right: 1px solid var(--cf-border);
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: transform 0.3s cubic-bezier(.7,.2,.17,1), box-shadow 0.3s;
      box-shadow: 2px 0 20px #0000;
    }
    .cf-side-nav {
      width: 100%;
      display: flex;
      flex-direction: column;
      margin-top: 2rem;
      gap: 0.3em;
    }
    .cf-side-link {
      color: #fff;
      text-decoration: none;
      display: flex;
      align-items: center;
      font-weight: 600;
      font-size: 1.09em;
      padding: 0.7em 2.1em 0.7em 2.2em;
      border-radius: 10px 0 0 10px;
      margin-bottom: 0.3em;
      transition: background 0.16s, color 0.18s;
      gap: 1.1em;
    }
    .cf-side-link.active, .cf-side-link:hover {
      background: #fff;
      color: var(--cf-orange);
    }
    .cf-side-link svg {
      width: 1.2em;
      height: 1.2em;
      fill: currentColor;
    }
    .cf-main {
      margin-left: 250px;
      padding: 80px 2.5vw 2vw 2.5vw;
      min-height: 100vh;
      max-width: 950px;
      position: relative;
      opacity: 0;
      transform: translateY(12px);
      animation: cf-fadein-main 0.7s cubic-bezier(.7,.2,.17,1) 0.25s forwards;
    }
    @keyframes cf-fadein-main {
      to { opacity: 1; transform: none;}
    }
    .cf-games-card {
      background: var(--cf-card);
      border-radius: 15px;
      padding: 2.2em 2em 1.7em 2em;
      box-shadow: var(--cf-shadow);
      margin-bottom: 2.7em;
      border: 1px solid var(--cf-border);
      max-width: 700px;
      opacity: 0;
      transform: translateY(30px) scale(0.98);
      animation: cf-fadein-card 0.85s cubic-bezier(.7,.2,.17,1) 0.65s forwards;
    }
    @keyframes cf-fadein-card {
      to { opacity: 1; transform: none;}
    }
    .cf-card-h {
      font-size: 1.2em;
      color: var(--cf-orange);
      font-weight: 700;
      margin-bottom: 1.2em;
      letter-spacing: 0.2px;
    }
    .cf-desc {
      color: #a0a4ab;
      font-size: 1.07em;
      margin-bottom: 2.3em;
      line-height: 1.7;
    }
    .cf-games-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-wrap: wrap;
      gap: 1.1em;
    }
    .cf-game-link {
      display: block;
      background: #f7f8fa;
      border-radius: 9px;
      box-shadow: 0 1px 4px #f3802011;
      border: 1px solid var(--cf-border);
      padding: 1em 1.3em;
      color: #22243a;
      font-weight: 600;
      font-size: 1.09em;
      text-decoration: none;
      transition: background 0.15s, border 0.15s, box-shadow 0.15s;
      margin-bottom: 0.7em;
      min-width: 120px;
      text-align: center;
    }
    .cf-game-link:hover {
      background: #fff8f2;
      border: 1px solid #ffb47e;
      color: var(--cf-orange);
      box-shadow: 0 4px 18px #f3802022;
      text-decoration: underline;
    }
    .cf-footer {
      color: #b2adc7;
      text-align: center;
      margin: 3rem 0 0 0;
      font-size: 0.99em;
      letter-spacing: 0.1px;
    }
  </style>
</head>
<body>
  <nav class="cf-sidebar">
    <div style="display:flex;flex-direction:column;align-items:center;gap:1.2em;">
      <img src={logoUrl} alt="Code Unit Logo" style="width:44px;height:44px;background:#fff;border-radius:12px;box-shadow:0 2px 8px #f3802012;">
    </div>
    <div class="cf-side-nav">
      <a class="cf-side-link" href="/">
        <svg viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 0 0-1.414 0l-7 7A1 1 0 0 0 3 11h1v6a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-3h2v3a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-6h1a1 1 0 0 0 .707-1.707l-7-7z"></path></svg>
        <span class="cf-side-link-label">Home</span>
      </a>
      <a class="cf-side-link" href="/about">
        <svg viewBox="0 0 20 20"><path d="M10 2a8 8 0 1 0 0 16 8 8 0 0 0 0-16zm0 4a2 2 0 1 1 0 4 2 2 0 0 1 0-4zm0 10c-2.21 0-4.2-1.17-5.2-3 .03-2 4-3.1 5.2-3.1 1.2 0 5.17 1.1 5.2 3.1-1 1.83-3 3-5.2 3z"></path></svg>
        <span class="cf-side-link-label">About</span>
      </a>
      <a class="cf-side-link" href="/profile">
        <svg viewBox="0 0 20 20"><path d="M10 2a8 8 0 1 0 0 16 8 8 0 0 0 0-16zm0 4a2 2 0 1 1 0 4 2 2 0 0 1 0-4zm0 10c-2.21 0-4.2-1.17-5.2-3 .03-2 4-3.1 5.2-3.1 1.2 0 5.17 1.1 5.2 3.1-1 1.83-3 3-5.2 3z"></path></svg>
        <span class="cf-side-link-label">Profile</span>
      </a>
      <a class="cf-side-link active" href="/games">
        <svg viewBox="0 0 20 20"><path d="M10.5 2a2.5 2.5 0 1 1 0 5A2.5 2.5 0 0 1 10.5 2zm0 1.5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-7.75 7.75A2.75 2.75 0 0 1 5.5 8.5C6.33 8.5 7 9.17 7 10a2.75 2.75 0 0 1-2.75 2.75zm12.5 0A2.75 2.75 0 0 1 14.5 8.5c.83 0 1.5.67 1.5 1.5A2.75 2.75 0 0 1 14.5 12.25zM10.5 18a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0-1.5a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"></path></svg>
        <span class="cf-side-link-label">Games</span>
      </a>
      <a class="cf-side-link" href={`https://github.com/${user}`} target="_blank" rel="noopener">
        <svg viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.484 2 12.021c0 4.427 2.867 8.18 6.839 9.504.5.092.682-.217.682-.482 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.342-3.369-1.342-.454-1.154-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.031 1.531 1.031.892 1.53 2.341 1.088 2.91.833.091-.647.349-1.087.635-1.338-2.221-.253-4.555-1.112-4.555-4.951 0-1.093.39-1.987 1.029-2.686-.103-.254-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0 1 12 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.748-1.026 2.748-1.026.546 1.378.202 2.396.1 2.65.64.699 1.028 1.593 1.028 2.686 0 3.849-2.337 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.417-.012 2.746 0 .267.181.578.688.48C19.135 20.197 22 16.447 22 12.021 22 6.484 17.522 2 12 2z"></path></svg>
        <span class="cf-side-link-label">GitHub</span>
      </a>
    </div>
  </nav>
  <main class="cf-main">
    <section class="cf-section">
      <div class="cf-games-card">
        <div class="cf-card-h">Games</div>
        <div class="cf-desc">Masterclass Block Work Around. Suggest games whnever idk</div>
        {gamesList.length > 0 ? (
          <ul class="cf-games-list">
            {gamesList.map(game => (
              <li>
                <a class="cf-game-link" href={`/games/${game}`} target="_blank">
                  {game.replace(/\.html$/, '')}
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <div class="cf-desc">No games found. Add HTML games to <code>public/games/</code></div>
        )}
      </div>
    </section>
    <div class="cf-footer">
      &copy; {new Date().getFullYear()} {user} · Code Unit
    </div>
  </main>
</body>
</html>
